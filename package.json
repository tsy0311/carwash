{
  "name": "autobath-website",
  "version": "1.0.0",
  "description": "AUTOBATH Car Detailing Website - Frontend and Backend",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "car-detailing",
    "autobath",
    "react",
    "nodejs"
  ],
  "author": "AUTOBATH",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "ngrok": "^5.0.0-beta.2"
  }
}
